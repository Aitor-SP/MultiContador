<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ContadorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/Reset1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ResetTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ResetTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset all"
        app:layout_constraintBottom_toTopOf="@id/Reset1"
        app:layout_constraintLeft_toRightOf="@id/ContadorTotal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Contador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/Reset2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Mas1"
        app:layout_constraintTop_toBottomOf="@id/ResetTotal" />

    <Button
        android:id="@+id/Mas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@id/Reset2"
        app:layout_constraintLeft_toRightOf="@id/Contador1"
        app:layout_constraintRight_toLeftOf="@id/Reset1"
        app:layout_constraintTop_toBottomOf="@+id/ResetTotal" />

    <Button
        android:id="@+id/Reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@id/Reset2"
        app:layout_constraintLeft_toRightOf="@id/Mas1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResetTotal" />

    <TextView
        android:id="@+id/Contador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/Reset3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Mas2"
        app:layout_constraintTop_toBottomOf="@id/Reset1" />

    <Button
        android:id="@+id/Mas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@id/Reset3"
        app:layout_constraintLeft_toRightOf="@id/Contador2"
        app:layout_constraintRight_toLeftOf="@id/Reset2"
        app:layout_constraintTop_toBottomOf="@+id/Reset1" />

    <Button
        android:id="@+id/Reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@id/Reset3"
        app:layout_constraintLeft_toRightOf="@id/Mas2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reset1" />

    <TextView
        android:id="@+id/Contador3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/Reset4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Mas2"
        app:layout_constraintTop_toBottomOf="@id/Reset2" />

    <Button
        android:id="@+id/Mas3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@id/Reset4"
        app:layout_constraintLeft_toRightOf="@id/Contador3"
        app:layout_constraintRight_toLeftOf="@id/Reset3"
        app:layout_constraintTop_toBottomOf="@+id/Reset2" />

    <Button
        android:id="@+id/Reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@id/Reset4"
        app:layout_constraintLeft_toRightOf="@id/Mas3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reset2" />

    <TextView
        android:id="@+id/Contador4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Mas4"
        app:layout_constraintTop_toBottomOf="@id/Reset3" />

    <Button
        android:id="@+id/Mas4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Contador4"
        app:layout_constraintRight_toLeftOf="@id/Reset4"
        app:layout_constraintTop_toBottomOf="@+id/Reset3" />

    <Button
        android:id="@+id/Reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Mas4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reset3" />

</androidx.constraintlayout.widget.ConstraintLayout>